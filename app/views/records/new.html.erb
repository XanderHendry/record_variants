<%= button_to "Records Index", "/records", method: :get %>
<%= button_to "Variants Index", "/variants", method: :get %>

<h3>Add a new Record</h3>

<%= form_with url: "/records", method: :post, data: {turbo:false} do |f| %>
<%= f.label :album %>
<%= f.text_field :album %><br>
<%= f.label :artist %>
<%= f.text_field :artist %><br>
<%= f.label "Play Speed" %>
<%= f.select :play_speed, [33, 45] %><br>
<%= f.label "Double LP" %>
<%= f.select :double_lp, [true, false] %><br>

<%= f.submit "Add Record" %>
<% end %>