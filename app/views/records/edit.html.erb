<h3>Edit <%= @record.album %></h3>

<%= form_with url: "/records/#{@record.id}", method: :patch, data: {turbo:false} do |f| %>
<%= f.label :album %>
<%= f.text_field :album %><br>
<%= f.label :artist %>
<%= f.text_field :artist %><br>
<%= f.label "Play Speed" %>
<%= f.select :play_speed, [33, 45] %><br>
<%= f.label "Double LP" %>
<%= f.select :double_lp, [true, false] %><br>

<%= f.submit "Update" %>
<% end %>